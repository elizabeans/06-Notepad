<Window x:Class="Notepad.ExitPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Title="ExitPopUp" Height="125" Width="315" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Button x:Name="buttonSave" Content="Save" HorizontalAlignment="Left" Margin="28,47,0,0" VerticalAlignment="Top" Width="75" Click="buttonSave_Click"/>
        <Button x:Name="buttonDontSave" Content="Don't Save" HorizontalAlignment="Left" Margin="108,47,0,0" VerticalAlignment="Top" Width="75" Click="buttonDontSave_Click"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="188,47,0,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,22,-10,0" TextWrapping="Wrap" Text="Do you want to save changes to your file?" VerticalAlignment="Top" Width="292" FontSize="14.667"/>

    </Grid>
</Window>
